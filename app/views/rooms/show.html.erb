<div id="room-id" data-room-id="<%= @room.try(:id) %>"></div>

<div id="user-id" data-user-id="<%= current_user.id %>"></div>

<div class="chat-room">

   <p><%= @room.name %></p>

    <div id="moves">
      <% @room.moves.each do |move| %>
        <%= render 'moves/move', move: move  %>
      <% end %>
    </div>

   <div class="chat-box">
     <%= render 'moves/form', move: 
     Move.new, room: @room %>
   </div>

</div>     


<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
