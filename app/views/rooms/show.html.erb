
<div class="chat-room">
   <p><%= @room.name %></p>
   <% @room.moves.each do |move| %>
      <p><%= move.content %> - <%=
       move.user.name %></p>
   <% end %>
   <div class="chat-box">
     <%= render 'moves/form', move: 
     Move.new, room: @room %>
   </div>
</div>     


<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
