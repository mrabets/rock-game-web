<h1>Game Rooms</h1>
<p class="lead">Join to other players game room</p><br>

  <table class="table table-dark table-striped">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Game name</th>
      <th scope="col">Creator name</th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% @rooms.each do |room| %>
      <% if Move.where(room_id: room.id).size == 1 %>
      <tr>
        <th scope="row"><%= room.id %></th>
        <td><%= room.name %></td>
        <td>mrabets</td>
        <td><%= link_to "Join", room %></td>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>