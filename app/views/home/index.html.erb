<%= javascript_pack_tag 'home', 'data-turbolinks-track': 'reload' %>

<title><%= provide(:title, "Home") %></title>

<div class="container">
  <div id="cloud-tag-container" style="
  margin-left: auto;
  margin-right: auto;
  width: 800px;
  height: 200px;
  "></div>
</div>


<main class="px-3">
  <div id="wall">

  </div>
  <h1>Lets play game!</h1>
  <p class="lead">Choose your game option</p>
  <p class="lead"><br>
    <%= link_to "Join", rooms_path, class: "btn btn-lg btn-secondary fw-bold border-white bg-white" %>
    <%= link_to "Create", new_room_path, class: "btn btn-lg btn-secondary fw-bold border-white bg-white" %>  </p>
</main>

<script>
  anychart.onDocumentLoad(function () {

    var chart = anychart.tagCloud();

    let data = <%= @data %>
    chart.data(data);

    chart.background().fill("#212529");

    chart.container("cloud-tag-container");
    chart.fromAngle(10);
    chart.toAngle(100);
    chart.anglesCount(5);

    chart.draw();
  });
</script>